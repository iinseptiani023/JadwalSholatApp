<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1">

                <RelativeLayout
                        android:id="@+id/rellay_jadwal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="0.55"
                        android:background="@android:color/holo_blue_dark"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                        <ImageView
                                android:id="@+id/imgView1"
                                android:layout_width="120dp"
                                android:layout_height="90dp"
                                android:layout_centerHorizontal="true"
                                android:adjustViewBounds="true"
                                android:padding="8dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/foto"
                                android:tint="@color/white"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgView1"
                                android:layout_centerHorizontal="true"
                                android:text="Jadwal Sholat"
                                android:layout_marginTop="5dp"
                                android:textSize="25sp" android:textColor="@color/white"/>

                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1">

                <RelativeLayout
                        android:id="@+id/rellay_asmaulhusna"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.55"
                        android:background="@color/deeppink"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                        <ImageView
                                android:id="@+id/imgView2"
                                android:layout_width="120dp"
                                android:layout_height="90dp"
                                android:layout_centerHorizontal="true"
                                android:adjustViewBounds="true"
                                android:padding="8dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/qur"
                                android:tint="@color/white"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgView2"
                                android:layout_centerHorizontal="true"
                                android:text="Asmaul Husna"
                                android:layout_marginTop="5dp"
                                android:textSize="25sp" android:textColor="@android:color/white"/>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1">

                <RelativeLayout
                        android:id="@+id/rellay_doaharian"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.55"
                        android:background="@color/lime"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                        <ImageView
                                android:id="@+id/imgView3"
                                android:layout_width="120dp"
                                android:layout_height="90dp"
                                android:layout_centerHorizontal="true"
                                android:adjustViewBounds="true"
                                android:padding="8dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/alquran"
                                android:tint="@color/white"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgView3"
                                android:layout_centerHorizontal="true"
                                android:text="Doa Harian"
                                android:layout_marginTop="5dp"
                                android:textSize="25sp" android:textColor="@android:color/white"/>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1">

                <RelativeLayout
                        android:id="@+id/rellay_halal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.55"
                        android:background="@color/design_default_color_primary_variant"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                        <ImageView
                                android:id="@+id/imgView4"
                                android:layout_width="120dp"
                                android:layout_height="90dp"
                                android:layout_centerHorizontal="true"
                                android:adjustViewBounds="true"
                                android:padding="8dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/halal"
                                android:tint="@color/white"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgView4"
                                android:layout_centerHorizontal="true"
                                android:text="Cek Halal"
                                android:layout_marginTop="5dp"
                                android:textSize="25sp" android:textColor="@android:color/white"/>

                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

